web1: 
  name: wordpress-web1
  php_display_errors: "0"
  document_root: wordpress/
  shared_writable_dirs: wordpress/wp-content/
  after_build:
    - "cp -rv wp-default/. wordpress/"
    - "cp -rv wordpress/wp-content/ wp-default/"
  before_deploy:
    - "cp -rv wp-default/wp-content/. wordpress/wp-content/"
  php_extensions:
    - mysql
    - gd
    - mbstring
    - exif
    - iconv
    - mcrypt
    - zip
    - curl

db1:
  name: wordpress-db1
  type: mysql